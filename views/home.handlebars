<main class="bg-light text-center border-bottom rounded">
  <p id="tag" class="mt-2">Latest News From The Onion. I Hope You Learn Something.</p>
</main>

<main class="row">
  <section class="col-md-9 text-center">
    <div>
      <button id="scrape-btn" type="button" class="btn btn-lg btn-danger mt-3">New News</button>
    </div>
  </section>
  <section id="articles" class="col-md-11">
    {{#each dbFound}}
      <div class="card my-3">
        <div class="card-body" data-articleId="{{_id}}">
          <h3 class="card-title text-center pb-1">{{headLine}}</h3>
          <hr>
          <img src={{image}}>
          <a id="link" href={{link}}><p class="card-text">{{link}}</p></a>
          <p id="summary-{{_id}}" class="card-text py-2 px-2 border rounded" style="background-color: #f6f8fa; display: none;">{{summary}}</p>
          <div class="row">
            <div class="col-md-3"></div> 
            <div class="col-md-3"></div>
          </div>
          <div class="row">
            <div id="buttons" class="col-md-3 text-center">
              {{#unless saved}}
                {{> save/save-block id=_id save=true}}
              {{/unless}}
              {{#if saved}}
                {{> save/save-block id=_id save=false}}
              {{/if}}
            <button id="summaryBtnId-{{_id}}" type="button" class="btn btn-md btn-success view-summary" data-summaryId="summary-{{_id}}" data-summaryCloseBtnId="summaryCloseBtn-{{_id}}">Snippet</button>
              <button id="notesbtn" type="button" class="btn btn-md btn-success notes-btn" data-articleId="{{_id}}" data-notesDiv="#notesDiv-{{_id}}">Comments</button>
            </div>
            <div class="col-md-6"></div>
          </div>
          
          <div id="notesDiv-{{_id}}" class="border mx-2 my-2 py-2 px-2" style="background-color:rgba(246,248,250, 0.4); display: none;">
            <div class="row">
              <div class="col-md-4" style="overflow-y: auto; height: 15vw;">
                {{#each note}}
                <div class="border mx-1 my-2">
                  <div class="text-center">
                    <h5>{{this.title}}</h5>
                  </div>
                  <p>{{this.body}}</p>
                  <div class="row">
                    <div class="col-md-8"></div>
                    <div class="col-md-4 text-right">
                      <button type="button" class="btn btn-sm btn-danger mr-2 mb-2 deleteNote-btn" data-noteId="noteId-{{this._id}}">Delete</button>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
              <div class="col-md-4">
                <form>
                  <div class="form-group">
                    <label for="articleNotesTitle-{{_id}}">Title</label>
                    <input type="text" class="form-control" id="articleNotesTitle-{{_id}}">
                  </div>
                  <div class="form-group">
                    <label for="articleNotesBody-{{_id}}">Body</label>
                    <textarea class="form-control" id="articleNotesBody-{{_id}}"></textarea>
                  </div>
                  <div class="row">
                    <div class="col-md-3">
                      <button type="button" class="btn btn-success btn-sm add-btn" data-title="#articleNotesTitle-{{_id}}" data-body="#articleNotesBody-{{_id}}" data-articleId="{{_id}}">Add</button>
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-5">
                      <button type="button" class="btn btn-secondary btn-sm ml-1 closeNotes-btn" data-notesDiv="#notesDiv-{{_id}}">Close</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  </section>
  <section class="col-md-3"></section>
</main>
